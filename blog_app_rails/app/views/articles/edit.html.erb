<div class="new-form">	
	<%= form_for @article do |f| %>
		
			<div class="form-group">
				<%= f.text_field :title, placeholder: "Title" %>
			</div>
			<div class="form-group">
				<%= f.text_field :author, placeholder: "Author" %>
			</div>
			<div class="form-group">
				<%= f.text_area :content, placeholder: "Content" %>
			</div>
			<%= f.submit "UPDATE" %>

	<% end %>
</div>